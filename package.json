{
  "name": "API",
  "version": "1.0.0",
  "description": "API",
  "author": "Nick.Podstigan",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": "v22.5.1"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --no-warn-ignored",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "migration:run": "npm run typeorm migration:run -- -d ./src/config/typeorm.ts",
    "migration:generate": "npm run typeorm -- -d ./src/config/typeorm.ts migration:generate ./src/migrations/$npm_config_name",
    "migration:create": "npm run typeorm -- migration:create ./src/migrations/$npm_config_name",
    "migration:revert": "npm run typeorm -- -d ./src/config/typeorm.ts migration:revert",
    "migration:revert-all": "./drop.sh",
    "prepare": "npx -y husky && husky install"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/swagger": "8.1.0",
    "@nestjs/throttler": "^6.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "@paralleldrive/cuid2": "^2.2.2",
    "@rushstack/eslint-patch": "^1.10.4",
    "@vue/eslint-config-airbnb": "^8.0.0",
    "app-root-path": "^3.1.0",
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.5",
    "csurf": "^1.2.2",
    "eslint-plugin-perfectionist": "^4.6.0",
    "helmet": "^7.1.0",
    "mysql2": "^3.14.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "typeorm": "^0.3.22",
    "typeorm-extension": "^3.6.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.14.0",
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@types/express": "^4.17.13",
    "@types/jest": "29.5.1",
    "@types/module-alias": "^2.0.4",
    "@types/node": "18.16.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.12.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^15.5.0",
    "module-alias": "^2.2.3",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.20",
    "ts-jest": "29.1.0",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.13.0"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix --no-warn-ignored",
    "*.{js,ts,css,scss,md}": "prettier --ignore-unknown --write",
    "*.js": "eslint --cache --fix --no-warn-ignored"
  }
}
